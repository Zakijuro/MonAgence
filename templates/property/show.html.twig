{% extends 'base.html.twig' %}

{% block title property.title %}
{% block body %}
    <div class="container bg-light">
        <div class="container">

        <div class="row">
            <div class="col-md-8">

            </div>

            <div class="col-md-4">
                <h1>{{ property.title }}</h1>
                <h2>{{ property.rooms }}ème étage - {{ property.surface }}m²</h2>
                <div class="text-primary" style="font-size: 4rem; font-weight: bold;">{{ property.getFormatedPrice }} €</div>
                <a href="#" class="btn btn-primary">Contacter l'agence</a>
            </div>
        </div>


        </div>
    
    </div>


    <div class="container mt-4">

        <p>
            {{ property.description | nl2br }}
        </p>

            <table class="table table-striped">
        <thead>
            <tr>
                <th><h2>Caractéristiques</h2></th>
                <th><h2>Spécificités</h2></th>
            </tr>
        </thead>
        <tbody>
                <tr>
                    <td>Surface habitable</td>
                    <td>{{ property.surface }} m²</td>
                </tr>
                <tr>
                    <td>Pièces</td>
                    <td>{{ property.rooms }}</td>
                </tr>
                <tr>
                    <td>Chambres</td>
                    <td>{{ property.bedrooms }}</td>
                </tr>
                <tr>
                    <td>Etage</td>
                    <td>{{ property.floors }}</td>
                </tr>
                <tr>
                    <td>Chauffage</td>
                    <td>{{ property.getheatType }}</td>
                </tr>
            </table>
        </tbody>

        <nav class="nav nav-tabs" id="tab">
        </nav>
    </div>
{% endblock %}